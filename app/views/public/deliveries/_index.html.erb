<% if @deliveries.present? %>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
      </tr>
    </thead>

    <tbody>
      <% deliveries.each do |delivery| %>
        <tr>
          <td>
              <%= delivery.post_code %>
          </td>
          <td>
              <%= delivery.address %>
          </td>
          <td>
              <%= delivery.name %>
          </td>
          <td>
              <%= link_to "編集する",_path(delivery) %>
          </td>
          <td>
              <%= link_to "削除する",_path(delivery), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>