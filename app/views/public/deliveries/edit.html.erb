<div class = "container">
  <%= form_with model: @delivery, url: delivery_path(@delivery.id), method: :patch do |f| %>
  <table class="table table-borderless">
    <br>
    <tr>
      <td class = "text-center"><font size=5px>配送先編集</td>
    </tr>
    <tr>
      <td class = "text-center border-bottom", width = "30%">郵便番号</td>
      <td class = "border-bottom"><%= f.text_field :post_code %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :住所%></td>
      <td class = "border-bottom"><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :宛名%></td>
      <td class = "border-bottom"><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.submit '変更を保存' %></td>
      <% end %>
    </tr>