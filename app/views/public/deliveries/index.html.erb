<h1>配送先登録/一覧</h1>

<%= form_with model:@delivery, url:deliveries_path, local: true do |f| %>

<div class="field">
  <%= f.label :郵便番号（ハイフンなし） %><br />
  <%= f.text_field :post_code, autocomplete: "post_code" %>
</div>

<div class="field">
  <%= f.label :住所 %><br />
  <%= f.text_field :address, autocomplete: "address" %>
</div>

<div class="field">
  <%= f.label :宛名 %><br />
  <%= f.text_field :name, autocomplete: "name" %>
</div>

<%= f.submit '登録する' ,class: "col-xs-2 btn-success " %>

<% end %>

<div>
  <%= render "index", deliveries: @deliveries %>
</div>