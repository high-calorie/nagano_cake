<h2>新規会員登録</h2>

<%= form_with model:Customer, url:customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <%= f.label :名前 %>
    <div class="field">
      <%= f.label :（性） %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="field">
      <%= f.label :（名） %><br />
      <%= f.text_field :first_name, autocomplete: "first_name" %>
    </div>

  <%= f.label :フリガナ %>
    <div class="field">
      <%= f.label :（セイ） %><br />
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    </div>
    <div class="field">
      <%= f.label :（メイ） %><br />
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
    </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :post_code, autocomplete: "post_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_namber, autocomplete: "phone_namber" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div>既に登録済みの方</div>
<div><%= render "public/shared/links" %>ログインしてください。</div>
