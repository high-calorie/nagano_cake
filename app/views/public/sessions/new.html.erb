<div class = "container">
  <table class="table table-borderless">
    <br>
    <tr>
      <td class = "text-center"><font size=6px>ログイン</td>
    </tr>
    <tr>
      <td class = "text-center", bgcolor="#cccccc"><font size=3px>会員の方はこちらからログイン</td>
    </tr>
    <tr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <td class = "text-right border-bottom", width = "30%"><%= f.label :メールアドレス %></td>
      <td class="field text-center border-bottom",width = "20%"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr class ="text-right border-bottom">
      <td><%= f.label :パスワード %></td>
      <td class="field text-center"><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>
    <tr class ="text-center">
      <td></td>
      <% if devise_mapping.rememberable? %>
      <td class="field"><%= f.check_box :remember_me %><%= f.label :remember_me %></td>
      <% end %>
    </tr>
    <tr class ="text-center">
      <td></td>
      <td class="actions"><%= f.submit "ログイン" %></td>
      <% end %>
    </tr>
    <tr>
      <td class = "text-center", bgcolor="#cccccc"><font size=3px>会員登録がお済みでない方</td>
    </tr>
    <tr>
      <td class = "text-center"><%= render "public/shared/links" %></td>
    </tr>
   </table>
</div>