<div class="container">
     <div class="row mt-5 mb-5">
            <div class="col1 ml-5 mr-5"></div>
            <div class="col1">
            <h1>マイページ</h1>
            </div>
     </div>

    <div class="row">
        <div class="col1 mr-5">
            <h2>登録情報</h2>
        </div>
        <div class="col1 mt-1">
            <%= link_to "編集する", edit_customer_path(@customer) %>
        </div>
    </div>


    <div class="row">
        <table class="table">
            <tr></tr>
                <th>氏名</th>
                <td><%= @customer.last_name %></td>
            </tr>
             <tr>
                <th>カナ</th>
                <td><%= @customer.full_name_kana %></td>
            </tr>
             <tr>
                <th>郵便番号</th>
                <td><%= @customer.post_code %></td>
            </tr>
             <tr>
                <th>住所</th>
                <td><%= @customer.address %></td>
            </tr>
             <tr>
                <th>電話番号</th>
                <td><%= @customer.phone_namber %></td>
            </tr>
             <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
            </tr>
        </table>
    </div>



    <div class="row">
        <div class="col1 mr-5">
          <h3>配送先</h3>
        </div>
        <div class="col1 mt-1">
          <%= link_to "一覧を見る", deliveries_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>

      <div class="row">
        <div class="col1 mr-5">
          <h3>注文履歴</h3>
        </div>
        <div class="col1 mt-1">
          <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>

    </div>


