<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.image %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_net_price %></td>
          <% @total += cart_item.subtotal %>
    <%= form_with model :@cart_item, url: public_cart_item_path(cart_item), method: :patch,local: true do |f| %>
      <td>
        <%= f.select :quantity,*[1..10], cart_item.amount.to_i  %>
        <%= f.submit '変更' %>
      </td>
      <td><%= cart_item.subtotal %>円</td>
    <% end %>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "消去する", public_cart_items_destroy_path, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  <div>
     <div>
        <%= link_to "買い物を続ける", public_items_path %>
     </div>
     <div>
        合計金額
        <% @total += cart_item.subtotal %>
     </div>
     <div>
        <%= link_to "情報入力に進む", new_public_order_path %>
     </div>
  </div>