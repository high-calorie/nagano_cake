<h2>ショッピングカート</h2>
<%= link_to "カートを空にする" %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= cart_item.item.get_image, size"50x50" %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_net_price %></td>
          <% form_with model :@cart_item(url: public_cart_item_path(cart_item), method: :patch,local: true) do |f| %>
      <td><%= cart_item.subtotal %></td>
      <td></td>
      <td></td>
          <% end %>   
    </tr>
  <% end %>
  </tbody>
</table>