<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
    <%= render 'genresearch', genres: @genres %>
    </div>

    <div class='col-md-8 offset-md-1'>
    <% @items.each do |item| %>

    <td><%= link_to(item) do %>
    <%= image_tag item.image, size:"130x100" %>
    <% end %>
    </td>

    <h2><%= item.name %></h2>
    <h1><%= item.add_tax_net_price.to_s(:delimited) %>(<%= item.net_price.to_s(:delimited) %>)円</h1>
    <h2><%= item.introduction %></h2>


    <%= form_for(@item) do |f| %>
    <td><%= f.select :name, ['1', '2', '3'], {include_blank: '個数選択'}, class: 'quantity' %></td>
    </div>
    <% end %>
    <% end %>
  </div>
</div>