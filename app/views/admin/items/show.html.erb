<h2>商品詳細</h2>


<%#= image_tag @item.user.item_image, size:"100x100" %>

          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.explanation %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.net_price_without_tax.to_s(:delimited) %>)円</td>
          </tr>
          
          
          <% if @item.net_price == true %>
            <h5>販売中</h5>
            <% else %>
            <h5>販売停止</h5>
          <% end %>
          
          <%= link_to "編集する", edit_admin_item_path(@item.id) %>