
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>商品詳細</h2>
     <div class='mt-3'>

      <%= image_tag @item.image, size:"100x100" %>
     </div>
    </div>

      <div class='col-md-8 offset-md-1'>
        <table class="table table-borderless">
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.genre_name %></td>
            </tr>
            <tr>
              <td>税込価格（税抜価格）</td>

              <td><%= @item.add_tax_net_price.to_s(:delimited) %>(<%= @item.net_price.to_s(:delimited) %>)円</td>

            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>

                <% if @item.status == true %>
                  <h5 class="text-success font-weight-bold">販売中</h5>
                <% else %>
                  <h5 class="text-muted font-weight-bold">販売停止</h5>
                <% end %>
              </td>
          </tr>
        </table>

        <div class="text-center">
            <%= link_to "編集する", edit_admin_item_path(@item.id) %>
        </div>
      </div>

    </div>
  </div>

