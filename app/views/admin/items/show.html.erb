<h2>商品詳細</h2>


<%= image_tag @item.image, size:"100x100" %>

          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格（税抜価格）</td>
            <td><%= @item.add_tax_net_price.to_s(:delimited) %>(<%= @item.net_price.to_s(:delimited) %>)円</td>
          </tr>
          
          
          <% if @item.status == true %>
                <h5 class="text-success font-weight-bold">販売中</h5>
              <% else %>
                <h5 class="text-muted font-weight-bold">販売停止</h5>
          <% end %>
          
          <%= link_to "編集する", edit_admin_item_path(@item.id) %>