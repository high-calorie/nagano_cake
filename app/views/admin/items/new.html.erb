<h2>商品新規登録</h2>
  <%= form_with model: @item, url:admin_items_path, method: :post, local:true do |f| %>
    <div>
      <%= f.label "商品画像" %>
      <%= f.file_field :image, accept: 'image/*' %>
    </div>

    <div>
      <%= f.label "商品名" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label "商品説明" %>
      <%= f.text_area :introduction %>
    </div>

    <div>
      <%= f.label "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, {include_blank: '--選択してください--'} %>
    </div>

    <div>
      <%= f.label "税抜価格" %>
      <%= f.text_field :net_price %>
    </div>

    <div>
      <%= f.label "販売ステータス" %>
      <%= f.select :status, [['販売中', true], ['販売停止中', false]] %>
    </div>

    <div>
      <%= f.submit "新規登録" %>
    </div>
 <% end %>


