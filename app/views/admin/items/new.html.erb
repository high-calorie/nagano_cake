<div class="container px-5 px-sm-0">
   <div class="row">
       <div class="col-md-12 offset-md-1">
           <h2>商品新規登録</h2>
             <%= form_with model: @item, url:admin_items_path, method: :post, local:true do |f| %>
               <div class="form-group">
                 <%= f.label "商品画像" %><br>
                 <%= f.file_field :image, accept: 'image/*' %>
               </div>

               <div class="form-group">
                 <%= f.label "商品名" %><br>
                 <%= f.text_field :name %>
               </div>

               <div class="form-group">
                 <%= f.label "商品説明" %><br>
                 <%= f.text_area :introduction %>
               </div>

               <div class="form-group">
                 <%= f.label "ジャンル" %><br>
                 <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, {include_blank: '--選択してください--'} %>
               </div>

               <div class="form-group">
                 <%= f.label "税抜価格" %><br>
                 ¥<%= f.text_field :net_price %>
               </div>

               <div class="form-group">
                 <%= f.label "販売ステータス" %><br>
                 <%= f.select :status, [['販売中', true], ['販売停止中', false]] %>
               </div>

               <div class="form-group"><br>
                 <%= f.submit "新規登録" %>
               </div>
            <% end %>
        </div>
    </div>
</div>


