<div class="container px-5 px-sm-0">
   <div class="row">
       <div class="col-md-10 offset-md-1">
           <h2>商品一覧</h2>
           <table class="table table-hover table-inverse">
             <thead>
               <tr>
                 <th>商品ID</th>
                 <th>商品名</th>
                 <th>税抜価格</th>
                 <th>ジャンル</th>
                 <th>ステータス</th>
               </tr>
             </thead>
             <tbody>
               <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td><%= link_to item.name, admin_item_path(item.id) %></td>
                  <td>¥<%= item.net_price %></td>
                  <td><%= item.genre.genre_name %></td>
                  <td>
                    <% if item.status == true%>
                      <%= "販売中" %>
                    <% else %>
                      <%= "販売停止中" %>
                    <% end %>
                  </td>
                </tr>
               <% end %>
             </tbody>
           </table>
           <%= link_to '新規登録',new_admin_item_path %>
         </div>
    </div>
</div>

