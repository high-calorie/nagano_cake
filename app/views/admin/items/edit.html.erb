<h3>商品編集</h3>

<%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>


 <%= f.label :image, "商品画像" %>
 <%= f.file_field :image, accept: 'image/*' %>

 <%= f.label :name, "商品名" %>
 <%= f.text_field :name %>
 
 <%= f.label :introduction, "商品説明" %>
 <%= f.text_area :introduction %>
 
 <%= f.label :genre "ジャンル" %>
 <%= f.collection_select :genre_id, @genre, :id, :name, {include_blank: "---"} %>
 
 <%= f.label :net_price "税抜き価格" %>
 <%= f.text_field :net_price %>
 
 <%= f.label :status "販売ステータス" %>
 <%= f.select :status, [['販売中', true], ['販売停止中', false]] %>
  
 <%= f.submit "変更を保存" %> 
 
 <% end %>