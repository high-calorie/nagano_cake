<div class="container">
    <div class="row">
      <div class=".ms-xxl-3" >
           <h3>商品編集</h3>
      </div>
    </div>
     <div class='col-md-8 offset-md-1'>
        <table class="table table-borderless">
         <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
        <table>
         <tr>
           <div class="form-group">
             <%= f.label :image, "商品画像" %>
             <%= f.file_field :image, accept: 'image/*' %>
           </div>
         </tr>
         <tr>
           <div class="form-group">
             <%= f.label :name, "商品名" %>
             <%= f.text_field :name %>
           </div>
         </tr>
         <tr>
           <div class="form-group">
             <%= f.label :introduction, "商品説明" %>
             <%= f.text_area :introduction %>
           </div>
         </tr>
         <tr>
           <div class="form-group">
             <%= f.label :genre_name, "ジャンル" %>
             <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, {include_blank: "---"} %>
           </div>
         </tr>
         <tr>
           <div class="form-group">
             <%= f.label :net_price, "税抜き価格" %>
             <%= f.text_field :net_price %>
           </div>
         </tr>
         <tr>
           <div class="form-group">
             <%= f.label :status, "販売ステータス" %>
             <%= f.select :status, [['販売中', true], ['販売停止中', false]] %>
           </div>
         </tr>
       </table>
        <div class="text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
    <% end %>
  </div>
</div>