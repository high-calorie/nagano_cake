<h2>注文履歴詳細</h2>
<%= form_with model: @order, url: admin_order_path, method: :post, local: true do |f| %>
  	<div>
  	    <table class="table table-bordered table-condensed">
          <tbody>
              <tr>
                <th>購入者</th>
                <td><%= @order.name %></td>
              </tr>
              <tr>
                <th>注文日</th>
          	    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
              　<th>配送先</th>
                <td><%= @order.postal_code %><br>
                	  <%= @order.address %><br>
                	  <%= @order.name %>
                </td>
              </tr>
              <tr>
              　<th>支払方法</th>
                <td><%= @order.payment_method %></td>
              </tr>
              <tr>
                <th>注文ステータス</th>
                <td><%= f.select :status, Order.order_statuses.keys, class: "order_status" %>
                 <%= f.submit "更新" , class: "btn btn-outline-success" %></td>
              </tr>
          </tbody>
        </table>
    </div>

    <div>
      <strong>請求情報</strong>
        	<table class="table  table-bordered table-condensed">
            <tr>
              <th>商品合計</th>
              <td><%= total_price(@order_details).to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th>送料</th>
              <td><%= @order.postage.to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th>請求金額合計</th>
              <td><%= @order.total_price.to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-7 order-details">
    	<strong>注文内容</strong>
        <table class="table table-striped table-bordered table-condensed">
        	<thead>
  	      <tr>
  	      	<th>商品名</th>
  	        <th>単価(税込)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
  	      	<th>制作ステータス</th>
  	      	<%= f.select :status, Order.order_statuses.keys, class: "order_status" %>
            <%= f.submit "更新" , class: "btn btn-outline-success" %>
  	      </tr>
        	</thead>
        	<tbody>
        	<% @order_details.each do |order_detail| %>
            <tr>
  	        <td><%= order_detail.product.name %></td>
            <td><%= item.add_tax_net_price.to_s(:delimited) %></td>
  	        <td><%= order_detail.quantity %></td>
  	        <td><%= tax_included_price %>円</td>
  	        <td>   </td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    