
<h2>ジャンル一覧・追加</h2>

 <%= form_with model:@genre, url:admin_genres_path do |f| %>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit "新規登録" %>
  <% end %>
  
  
 <h2>ジャンル</h2>
 
 <body>
    <% @genres.each do |genre| %>
    <%= genre.name %>
    <%= link_to "編集する" %>
    
    <% end %> 
     
    
 </body>

