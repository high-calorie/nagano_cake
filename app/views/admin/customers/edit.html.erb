<div class = "container">
  <table class="table table-borderless">
    <br>
    <tr>
      <td class = "text-center"><font size=5px><%= @customers.last_name %><%= @customers.first_name %>さんの会員情報編集</td>
    </tr>
    <tr>
      <td class = "text-center border-bottom", width = "30%">会員ID</td>
      <td class = "border-bottom"><%= @customers.id %></td>
    </tr>
    <%= form_with model: @customers, url: admin_customer_path(@customers.id), method: :patch do |f| %>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :氏名%></td>
      <td class = "border-bottom"><%= f.text_field :last_name %></td>
      <td class = "border-bottom"><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :フリガナ%></td>
      <td class = "border-bottom"><%= f.text_field :last_name_kana %></td>
      <td class = "border-bottom"><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :郵便番号%></td>
      <td class = "border-bottom"><%= f.text_field :customers_id %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :住所%></td>
      <td class = "border-bottom"><%= f.text_field :post_code %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :電話番号%></td>
      <td class = "border-bottom"><%= f.text_field :phone_namber %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :メールアドレス%></td>
      <td class = "border-bottom"><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td class = "text-center border-bottom"><%= f.label :会員ステータス%></td>
      <td class = "border-bottom">
        <%= f.radio_button :withdrawal_flag, false %>
        <%= f.label :withdrawal_flag, "有効" %>
        <%= f.radio_button :withdrawal_flag, true %>
        <%= f.label :withdrawal_flag, "退会" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit '変更を保存' %></td>
    </tr>
    <% end %>
  </table>
</div>